<?xml version='1.0' encoding='utf-8'?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.com.azure"
    version   = "1.0.0">

<name>Academia UTCH</name>

<description>
Academia Movil UTCH - Consulta tus notas, estado academico, descarga recibos y recibe notificaciones en tu dispositivo movil en tiempo real.
</description>

<author href="http://academia.utch.edu.co/" email="jsu18@hotmail.com">
Yhonatan Sanchez Uran
</author>

<content src="index.html"/>
<access origin="*"/>

    <preference name="phonegap-version" value="3.7.0" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    <preference name="launch-mode" value="standard" />
    <preference name="KeepRunning" value="true"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="LoadingDialog" value="Cargando..."/>
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    <!-- <preference name="load-url-timeout" value="60000" /> -->
    <gap:platform name="ios" />
    <gap:platform name="android" />
    <gap:platform name="winphone" />


    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
    <feature name="http://api.phonegap.com/1.0/device"/>
    <gap:plugin name="org.apache.cordova.device"  />
    <gap:plugin name="org.apache.cordova.device-motion"  />
    <gap:plugin name="org.apache.cordova.device-orientation"  />
    <gap:plugin name="org.apache.cordova.geolocation"  />
    <gap:plugin name="org.apache.cordova.network-information"  />
    <gap:plugin name="org.apache.cordova.splashscreen"  />
    <gap:plugin name="org.apache.cordova.vibration"  />
    <gap:plugin name="com.phonegap.plugins.pushplugin" version="2.1.1" /> 
    <gap:plugin name="nl.x-services.plugins.socialsharing"/>
    <gap:plugin name="tr.bel.mamak.sms_plagin" version="0.1.0" />
    <content src="index.html" />
    <access origin="*"/>
    
  
 <!--    <icon src="icon.png" /> -->

    <icon gap:density="ldpi" gap:platform="android" src="img/icon/android/36.png" density="ldpi" />
    <icon gap:density="mdpi" gap:platform="android" src="img/icon/android/48.png" density="mdpi" />
    <icon gap:density="hdpi" gap:platform="android" src="img/icon/android/72.png" density="hdpi" />
    <icon gap:density="xhdpi" gap:platform="android" src="img/icon/android/96.png" density="xhdpi" />
  
    <!-- <gap:splash src="splash.png" /> -->

    <gap:splash src="img/screen/android/drawable-port-ldpi-screen.png"  gap:platform="android" gap:qualifier="ldpi" width="240" height="320"/>
    <gap:splash src="img/screen/android/drawable-port-mdpi-screen.png"  gap:platform="android" gap:qualifier="mdpi" width="320" height="480"/>
    <gap:splash src="img/screen/android/drawable-port-hdpi-screen.png"  gap:platform="android" gap:qualifier="hdpi" width="480" height="800" />
    <gap:splash src="img/screen/android/drawable-port-xhdpi-screen.png" gap:platform="android" gap:qualifier="xhdpi" width="720" height="1280"/> 

    <gap:splash src="img/screen/android/drawable-land-ldpi-screen.png"  gap:platform="android" gap:density="ldpi" width="320" height="240" />
    <gap:splash src="img/screen/android/drawable-land-mdpi-screen.png"  gap:platform="android" gap:density="mdpi" width="480" height="320" />
    <gap:splash src="img/screen/android/drawable-land-hdpi-screen.png"  gap:platform="android" gap:density="hdpi" width="800" height="480" />
    <gap:splash src="img/screen/android/drawable-land-xhdpi-screen.png" gap:platform="android" gap:density="xhdpi" width="1280" height="720" />
    
   
    
</widget>
